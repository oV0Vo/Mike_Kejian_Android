<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:typeface">monospace</item>
        <item name="homeAsUpIndicator">@drawable/left</item>
        <item name="titleTextColor">@color/white</item>
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="myActionBarStyle" parent="android:Widget.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="submenuStyle">
        <item name="android:background">@color/white</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="wideButton">
        <item name="android:width">100dp</item>
    </style>

    <style name="green_whiteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/over_big_padding</item>
        <item name="android:paddingRight">@dimen/over_big_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/green_round</item>
    </style>

    <style name="white_greenText_round">
        <item name="android:paddingLeft">@dimen/over_big_padding</item>
        <item name="android:paddingTop">@dimen/sub_medium_padding</item>
        <item name="android:paddingRight">@dimen/over_big_padding</item>
        <item name="android:paddingBottom">@dimen/sub_medium_padding</item>
        <item name="android:textSize">@dimen/sub_medium_font</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@drawable/green_thin_round_border</item>
    </style>

    <style name="main_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/sub_big_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/sub_medium_font</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dialog_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/over_medium_padding</item>
        <item name="android:paddingTop">@dimen/over_medium_padding</item>
        <item name="android:paddingBottom">@dimen/over_medium_padding</item>
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/dark_thin_bottom_border</item>
    </style>

    <style name="dialog_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/over_medium_padding</item>
        <item name="android:paddingBottom">@dimen/over_medium_padding</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="empty_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">@dimen/sub_big_font</item>
        <item name="android:textColor">@color/dark</item>
    </style>

</resources>