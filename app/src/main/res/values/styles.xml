<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/small_font</item>
        <item name="android:typeface">monospace</item>
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="homeAsUpIndicator">@drawable/left</item>
        <item name="android:titleTextStyle">@style/titleStyle</item>
    </style>

    <style name="titleStyle" parent="@android:style/TextAppearance.Holo.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/big_font</item>
    </style>

    <style name="myActionBarStyle" parent="android:Widget.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="submenuStyle">
        <item name="android:background">@color/dark_blue</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="wideButton">
        <item name="android:width">100dp</item>
    </style>

    <style name="green_whiteText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/extreme_big_padding</item>
        <item name="android:paddingRight">@dimen/extreme_big_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
    </style>

</resources>