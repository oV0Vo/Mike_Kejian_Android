<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/b16392dc6694"


        android:layout_marginBottom="10dp">
        <com.kejian.mike.mike_kejian_android.ui.message.CircleImageView
            android:id="@+id/user_photo_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/photo"



            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:textColor="#16a085"

            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="_______________________________________________"
            android:textColor="#d2d2d2"

            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView

                android:layout_marginLeft="20dp"

                android:text="姓名: Halo"/>
            <TextView


                android:layout_marginLeft="100dp"
                android:text="性别: 菇凉"/>
        </TableRow>
        <TableRow

            android:layout_marginTop="5dp">
            <TextView

                android:layout_marginLeft="20dp"
                android:text="昵称: 夏至未至"/>
            <TextView

                android:layout_marginLeft="100dp"
                android:text="生日"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="20dp"
            >
            <TextView

                android:layout_marginLeft="20dp"
                android:text="院系: 文学院"/>
            <TextView

                android:layout_marginLeft="100dp"
                android:text="专业: 宋词"/>
        </TableRow>
        <TableRow>
            <TextView

                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="年级: 2013"/>

        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:background="@drawable/setting_item_selector">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="动态"

            android:layout_marginTop="10dp"

            android:layout_marginLeft="20dp"
            android:textColor="#16a085"
            />
</LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:id="@+id/his_attention_people"
            android:background="@drawable/setting_item_selector"
            android:foregroundTintMode="src_over">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="30dp"
                    android:maxWidth="30dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/watch_darkgray"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="关注他的人"

                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/unread_newReply_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="7"

                    android:visibility="visible"
                    android:textColor="#7d7d7d"

                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="38dp"
                    android:maxWidth="38dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/right"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:id="@+id/his_attention_course"
            android:background="@drawable/setting_item_selector">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="30dp"
                    android:maxWidth="30dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/book4"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="他的课程"

                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/unread_newPraise_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="11"
                    android:visibility="visible"
                    android:textColor="#7d7d7d"

                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="38dp"
                    android:maxWidth="38dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/right"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>
        <View
            android:background="@color/black2"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:id="@+id/his_attention_post"
            android:background="@drawable/setting_item_selector"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="40dp"
                    android:maxWidth="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/comment2"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="他的帖子"

                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:layout_marginRight="20dp">
                <TextView
                    android:id="@+id/unread_mentionMe_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center"
                    android:layout_marginRight="8dp"
                    android:text="29"
                    android:visibility="visible"
                    android:textColor="#7d7d7d"

                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="38dp"
                    android:maxWidth="38dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/right"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>


            </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="关注"
                android:layout_gravity="center"
                android:background="@drawable/rec_button"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        </LinearLayout>


</LinearLayout>