<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/why_bind_school_account"
            android:id="@+id/why_bind"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="所在城市"
                />

            <Spinner
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:entries="@array/brands"
                android:layout_marginLeft="20dp"

                ></Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="学校"
                />
            <Spinner
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:entries="@array/brands"
                android:layout_marginLeft="44dp"

                ></Spinner></LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="教务网帐号"
                />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="9dp"
                android:background="@drawable/rec_edit"
                android:inputType="textPassword"
                /></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="教务网密码"
            />
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/rec_edit"
            android:inputType="textPassword"
            /></LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_button"
        android:layout_marginTop="40dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/complete_reset_passport"
        android:text="完成"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip_bind"
        android:id="@+id/skip_bind"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        />


</LinearLayout>