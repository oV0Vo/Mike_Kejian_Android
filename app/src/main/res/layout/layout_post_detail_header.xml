<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="5pt"
        android:textColor="@color/black"
        android:id="@+id/detail_title">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey">
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="5pt"
        android:id="@+id/detail_content">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/green"
                android:textSize="10sp"
                android:gravity="center"
                android:padding="5pt"
                android:id="@+id/detail_author_name">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:gravity="center"
                android:paddingLeft="2pt"
                android:paddingRight="5pt"
                android:id="@+id/detail_date">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/watch_gray"
                android:maxHeight="15dp"
                android:maxWidth="15dp"
                android:adjustViewBounds="true"
                android:foregroundGravity="center">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:paddingLeft="2pt"
                android:paddingRight="5pt"
                android:gravity="center"
                android:id="@+id/detail_view_num">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/comment1"
                android:maxHeight="15dp"
                android:maxWidth="15dp"
                android:adjustViewBounds="true"
                android:foregroundGravity="center">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:padding="5pt"
                android:gravity="center"
                android:id="@+id/detail_comment_num">
            </TextView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:descendantFocusability="blocksDescendants">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5pt"
            android:text="邀请回答"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/setting_item_selector"
            android:focusable="false"
            android:clickable="true"
            android:id="@+id/detail_invite_button">
        </TextView>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/grey">
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="5pt"
            android:text="关注帖子"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/setting_item_selector"
            android:focusable="false"
            android:clickable="true"
            android:id="@+id/detail_follow_button">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey">
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reply_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/small_size"
        android:paddingRight="@dimen/small_size"
        android:background="@color/black2">

        <TextView
            android:id="@+id/detail_reply_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="@dimen/over_medium_padding"
            android:textSize="@dimen/big_font"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey">
    </LinearLayout>

</LinearLayout>