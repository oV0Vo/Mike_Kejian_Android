<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
        <com.kejian.mike.mike_kejian_android.ui.message.CircleImageView
            android:layout_width="@dimen/medium_icon_width"
            android:layout_height="@dimen/medium_icon_height"
            android:layout_centerInParent="true"
            android:src="@drawable/daoxu"
            app:border_width="@dimen/zero"
            app:border_color="@color/white"
            android:layout_marginLeft="10dp"
            android:id="@+id/pic"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="离散数学"
            android:textSize="@dimen/over_big_font"
            android:layout_marginLeft="@dimen/sub_big_padding"
            android:layout_marginTop="@dimen/small_padding" />
</LinearLayout>