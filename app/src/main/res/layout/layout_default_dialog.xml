<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_text"
        style="@style/dialog_title_style"
        android:text="@string/time_dialog_title"/>

    <FrameLayout
        android:id="@+id/dialog_content_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/medium_dialog_height">
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_text"
            style="@style/dialog_button_style"
            android:background="@drawable/dark_thin_right_border"
            android:text="@string/cancel"/>

        <TextView
            android:id="@+id/confirm_text"
            style="@style/dialog_button_style"
            android:text="@string/confirm"/>
    </LinearLayout>


</LinearLayout>