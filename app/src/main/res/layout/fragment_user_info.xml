<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:id="@+id/user_info_layout"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="160dp"


        android:background="@drawable/bg"


        android:layout_marginBottom="10dp">
        <com.kejian.mike.mike_kejian_android.ui.message.CircleImageView
            android:id="@+id/user_photo_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/photo"



            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基本信息"
            android:textColor="#16a085"
            android:layout_marginLeft="30dp"
            android:editable="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#d2d2d2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
   <TableLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:id="@+id/user_base_info_view"

       >
       <TableRow



          >
           <TextView
               android:text="姓名"

               android:layout_marginLeft="30dp"

               />

           <TextView

               android:id="@+id/base_info_name"/>
           <TextView
               android:text="性别"



               android:layout_marginLeft="100dp"/>
           <TextView

               android:id="@+id/base_info_gender"/>
       </TableRow>
       <TableRow>
           <TextView
               android:layout_marginTop="20dp"
               android:layout_marginLeft="30dp"

               android:text="昵称"/>
           <TextView
               android:id="@+id/base_info_nickname"
               />
       </TableRow>
   </TableLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教务信息"
            android:textColor="#16a085"
            android:layout_marginLeft="30dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#d2d2d2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_school_info_view"
        >
        <TableRow



            >
            <TextView
                android:text="院系"

                android:layout_marginLeft="30dp"

                />
            <TextView

                android:id="@+id/user_school_info_department"
                />
            <TextView
                android:text="专业"



                android:layout_marginLeft="100dp"/>
            <TextView
                android:id="@+id/user_school_info_major"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"

                android:text="身份"/>
            <TextView
                android:id="@+id/user_school_info_identify"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:text="年级"

                />
            <TextView
                android:id="@+id/user_school_info_grade"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:text="教务网账号"


                />
            <TextView
                android:id="@+id/user_school_info_number"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名"
            android:textColor="#16a085"
            android:layout_marginLeft="30dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#d2d2d2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </LinearLayout>
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView

                android:layout_marginLeft="30dp"
                android:text="The gay is lazy..."
                android:id="@+id/base_info_sign"

                />
           
        </TableRow>
    </TableLayout>

</LinearLayout>