<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/current_question"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/quiz"/>

    <TextView
        android:id="@+id/current_question_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:singleLine="false"
        android:ellipsize="end"
        android:textSize="@dimen/medium_font"/>

    <LinearLayout
        android:id="@+id/zhankai_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zhankai_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableRight="@drawable/down"
            android:textSize="@dimen/small_font"
            android:textColor="@color/green"
            android:text="@string/zhankai"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/current_question_left_time_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:background="@drawable/bell"/>

        <TextView
            android:id="@+id/current_question_countdown_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:textSize="@dimen/sub_medium_font"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/current_question_answer_button"
                android:layout_gravity="right"
                style="@style/green_whiteText"
                android:textSize="@dimen/big_font"
                android:text="@string/answer_question_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>