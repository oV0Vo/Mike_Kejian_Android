<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/small_padding"
        android:paddingBottom="@dimen/over_medium_padding"
        android:background="@drawable/dark_round_bottom_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/half_quiz_icon_height"
            android:paddingTop="@dimen/half_quiz_icon_height"
            android:background="@drawable/red_round_top_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/current_question_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/medium_padding"
                android:paddingRight="@dimen/medium_padding"
                android:maxLines="3"
                android:singleLine="false"
                android:ellipsize="end"
                android:textSize="@dimen/medium_font"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/medium_padding"
                android:paddingRight="@dimen/medium_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding">

                <LinearLayout
                    android:id="@+id/zhankai_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/zhankai_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textSize="@dimen/small_font"
                        android:textColor="@color/green"
                        android:text="@string/zhankai"/>

                    <ImageView
                        android:id="@+id/zhankai_image"
                        android:layout_width="@dimen/small_icon_size"
                        android:layout_height="@dimen/small_icon_size"
                        android:src="@drawable/down"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/medium_padding"
                android:paddingRight="@dimen/medium_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/current_question_left_time_clock"
                            android:layout_width="@dimen/small_icon_size"
                            android:layout_height="@dimen/small_icon_size"
                            android:layout_marginRight="@dimen/small_padding"
                            android:background="@drawable/bell"/>

                        <TextView
                            android:id="@+id/current_question_countdown_time_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sub_medium_font"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/action_text"
                        android:layout_alignParentRight="true"
                        style="@style/green_whiteText"
                        android:textSize="@dimen/big_font" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/quiz_icon_width"
            android:layout_height="@dimen/quiz_icon_height"
            android:layout_marginLeft="@dimen/over_medium_padding"
            android:background="@drawable/quiz"/>

</RelativeLayout>

