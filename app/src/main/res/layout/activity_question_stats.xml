<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        style="?android:attr/progressBarStyleLarge"
        android:visibility="visible"/>

<LinearLayout
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/medium_padding"
        android:paddingBottom="@dimen/big_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_sub_medium_icon_height"
            android:paddingTop="@dimen/sub_medium_button_padding"
            android:paddingLeft="@dimen/medium_button_padding"
            android:paddingRight="@dimen/medium_button_padding"
            android:orientation="vertical"
            android:background="@drawable/green_round_top_border">

            <TextView
                android:id="@+id/question_content_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:singleLine="false"
                android:ellipsize="end"
                android:textSize="@dimen/sub_medium_font"/>

            <LinearLayout
                android:id="@+id/choice_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/sub_big_padding"
                android:paddingTop="@dimen/sub_big_padding">
            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/sub_medium_icon_width"
            android:layout_height="@dimen/sub_medium_icon_height"
            android:background="@drawable/question"/>

    </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/big_padding"
            android:orientation="horizontal">

            <Button
                android:id="@+id/question_answer_question_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="展开"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/question_answer_stats_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/big_padding"
            android:paddingBottom="@dimen/big_padding"
            android:orientation="horizontal"
            android:background="@drawable/dark_thin_top_bottom_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/over_big_font"
                android:textColor="@color/green"
                android:text="@string/question_answer_stats_title_text"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/stats_zhankai_image"
                    android:layout_width="@dimen/sub_medium_icon_width"
                    android:layout_height="@dimen/half_sub_medium_icon_height"
                    android:src="@drawable/down"/>

            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/stats_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
        </FrameLayout>


    <LinearLayout
        android:id="@+id/all_answer_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/big_padding"
        android:paddingBottom="@dimen/big_padding"
        android:orientation="horizontal"
        android:background="@drawable/dark_thin_top_bottom_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/over_big_font"
            android:textColor="@color/green"
            android:text="@string/question_answer_all_answer_title_text"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/all_answer_zhankai_image"
                android:layout_width="@dimen/sub_medium_icon_width"
                android:layout_height="@dimen/half_sub_medium_icon_height"
                android:src="@drawable/down"/>

        </RelativeLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/question_answer_all_question_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ListView
                android:id="@+id/question_answer_answer_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question_answer_all_answer_no_more_question"/>
        </LinearLayout>


</LinearLayout>
</ScrollView>