<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="5pt"
                android:text="测试标题"
                android:textColor="@color/black"
                android:id="@+id/title_view">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey">
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容"
                android:textSize="14sp"
                android:padding="5pt"
                android:id="@+id/content_view">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/green"
                        android:text="小明"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:padding="5pt"
                        android:id="@+id/author_name_view">
                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="19:07 today"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:paddingLeft="2pt"
                        android:paddingRight="5pt"
                        android:id="@+id/date_view">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/watch_gray"
                        android:maxHeight="15dp"
                        android:maxWidth="15dp"
                        android:adjustViewBounds="true"
                        android:foregroundGravity="center">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="10sp"
                        android:text="10"
                        android:paddingLeft="2pt"
                        android:paddingRight="5pt"
                        android:gravity="center"
                        android:id="@+id/view_num_view">
                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/comment1"
                        android:maxHeight="15dp"
                        android:maxWidth="15dp"
                        android:adjustViewBounds="true"
                        android:foregroundGravity="center">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="10sp"
                        android:text="10"
                        android:padding="5pt"
                        android:gravity="center"
                        android:id="@+id/comment_num_view">
                    </TextView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5pt"
                    android:text="邀请回答"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/black">
                </TextView>

                <LinearLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/grey">
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5pt"
                    android:text="关注帖子"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textColor="@color/grey">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/grey">
            </LinearLayout>


            <LinearLayout
                android:id="@+id/reply_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/black2">
            </LinearLayout>


        </LinearLayout>



    </ScrollView>
</LinearLayout>
