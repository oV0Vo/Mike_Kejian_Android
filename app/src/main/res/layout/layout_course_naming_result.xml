<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/big_padding"
    android:paddingBottom="@dimen/big_padding">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2">


    <TextView
        android:paddingRight="@dimen/over_over_small_size"
        android:layout_marginBottom="@dimen/over_over_small_size"
        android:textSize="@dimen/medium_font"
        android:text="@string/course_naming_sign_in_num_title"/>

    <LinearLayout
        android:layout_marginBottom="@dimen/over_over_small_size"
        android:paddingLeft="@dimen/over_over_small_size"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/sub_small_size"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stats_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/sub_small_size"
                android:paddingBottom="@dimen/sub_small_size"/>

            <ImageView
                android:layout_width="@dimen/sub_small_icon_size"
                android:layout_height="@dimen/sub_small_icon_size"
                android:layout_marginTop="1dp"
                android:src="@drawable/user"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/color_bar_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/small_size"/>

            <TextView
                android:id="@+id/percent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/small_size"
                android:textColor="@color/green"/>
        </LinearLayout>
    </LinearLayout>

        <TextView
            android:paddingRight="@dimen/over_over_small_size"
            android:layout_marginTop="@dimen/over_over_small_size"
            android:textSize="@dimen/medium_font"
            android:text="course_naming_absent_list_title"/>

        <LinearLayout
            android:paddingLeft="@dimen/over_over_small_size"
            android:orientation="vertical">

            <TextView
                android:id="@+id/absent_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:maxLines="3"
                android:ellipsize="end"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/zhankai_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/zhankai_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textSize="@dimen/small_font"
                        android:textColor="@color/green"
                        android:text="@string/zhankai"/>

                    <ImageView
                        android:id="@+id/zhankai_image"
                        android:layout_width="@dimen/small_icon_size"
                        android:layout_height="@dimen/small_icon_size"
                        android:src="@drawable/down"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>



    </GridLayout>

</LinearLayout>