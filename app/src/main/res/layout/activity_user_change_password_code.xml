<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"

            android:layout_marginTop="40dp"
            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:text="手机号"

                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/set_password_phonenumber"
                />
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                android:hint="请输入注册手机号"
                android:background="@drawable/set_password_phonenumber_input"

                android:id="@+id/phone_number"
                /></LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"


            >
            <TextView
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:text="验证码"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/set_password_code"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"

                >

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:hint="请输入验证码"

                    android:background="@drawable/set_password_code_input"
                    android:inputType="textPassword"
                    android:id="@+id/change_psd_code"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text="发送验证码"
                    android:textColor="@color/white"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/rec_button"
                    android:id="@+id/send_change_psd_code"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
           </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_button"
        android:layout_marginTop="40dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:id="@+id/complete_set_code"
        android:textColor="@color/white"
        android:text="完成"
        />


</LinearLayout>