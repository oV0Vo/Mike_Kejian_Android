<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_text"
        style="@style/dialog_title_style"
        android:text="@string/time_dialog_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal">

        <TimePicker
            android:id="@+id/time_picker1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TimePicker
            android:id="@+id/time_picker2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/over_medium_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/medium_font"
            android:text="@string/time_dialog_begin_time"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/medium_font"
            android:text="@string/time_dialog_end_time"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_button"
            style="@style/dialog_button_style"
            android:background="@drawable/dark_thin_right_border"
            android:text="@string/cancel"/>

        <TextView
            android:id="@+id/commit_button"
            style="@style/dialog_button_style"
            android:text="@string/confirm"/>
    </LinearLayout>


</LinearLayout>