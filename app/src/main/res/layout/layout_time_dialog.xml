<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_text"
        style="@style/dialog_title_style"
        android:text="@string/time_dialog_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/over_big_padding"
        android:paddingBottom="@dimen/over_big_padding"
        android:paddingLeft="@dimen/big_padding"
        android:paddingRight="@dimen/big_padding"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/over_medium_padding"
            android:textSize="@dimen/medium_font"
            android:text="@string/time_dialog_continue_time"/>

        <EditText
            android:id="@+id/continue_time_text"
            android:layout_width="@dimen/text_input_width"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/green_bottom_thin_border"
            android:textSize="@dimen/sub_medium_font"
            android:maxLines="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minute"
            android:textSize="@dimen/medium_font"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel_text"
            style="@style/dialog_button_style"
            android:background="@drawable/dark_thin_right_border"
            android:text="@string/cancel"/>

        <TextView
            android:id="@+id/confirm_text"
            style="@style/dialog_button_style"
            android:text="@string/confirm"/>
    </LinearLayout>


</LinearLayout>