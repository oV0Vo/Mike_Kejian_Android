<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey">
    <LinearLayout
        android:id="@+id/mention_me"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <!--<include  android:id="@+id/layout_bar" layout="@layout/layout_title"/>-->
        <TextView
            android:id="@+id/mention_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="共1条"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp" />
        <com.kejian.mike.mike_kejian_android.ui.message.RefreshListView
            android:id="@+id/mention_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="@dimen/divider_height"></com.kejian.mike.mike_kejian_android.ui.message.RefreshListView>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/mention_me_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="?android:attr/progressBarStyleLarge"/>

</RelativeLayout>

