<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/over_medium_padding"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/course_detail_brief_image"
        android:layout_width="@dimen/book_width"
        android:layout_height="@dimen/book_height"
        android:layout_gravity="left|center"
        android:background="@drawable/default_book"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/book_height"
        android:orientation="vertical"
        android:background="@drawable/green_bottom_thin_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/medium_padding"
            android:paddingLeft="@dimen/sub_big_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/medium_padding"
                android:text="@string/main_course_brief_academy_prefix"/>

            <TextView
                android:id="@+id/course_detail_brief_academy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/medium_padding"
            android:paddingLeft="@dimen/sub_big_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/medium_padding"
                android:text="@string/course_teach_teacher_title"/>

            <TextView
                android:id="@+id/course_detail_brief_teacher_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/medium_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/big_padding"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


